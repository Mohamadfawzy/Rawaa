<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rawaa.Views.SettingPage"
             BackgroundColor="Orange"
             Shell.TabBarIsVisible="False"
             >
    <ContentPage.Content>
        <StackLayout BackgroundColor="DarkBlue">

            <Button Text="عربي"
                    x:Name="box_ar"
                    Margin="15"
                    CornerRadius="20"
                    FontFamily="IconFont"
                    Clicked="Button_Clicked_Arabic"/>
            
            <Button Text="English"
                    x:Name="box_en"
                    Margin="15"
                    CornerRadius="20"
                    Clicked="Button_Clicked_English" />

            <Button Text="تمام ok"
                    x:Name="bt_ok"
                    Clicked="Button_Clicked_Ok" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>